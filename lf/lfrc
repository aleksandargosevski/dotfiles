set previewer ~/.config/lf/lf_kitty_preview
# set cleaner ~/.config/lf/lf_kitty_clean

set hidden on
set ratios '1:3:3'
set relativenumber
set drawbox true
set ignorecase true
set icons
set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set cursorpreviewfmt "\033[7;2m"

cmd mkdir %{{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile %{{
  printf "File Name: "
  read ans
  touch $ans
}}

cmd fzf_open ${{
  res="$(fd | fzf-tmux -p --reverse)"
  lf -remote "send $id nvim \"$res\""
}}

cmd fzf_jump ${{
  res="$(fd | fzf-tmux -p --reverse --header='Jump to location' | sed 's/\\/\\\\/g;s/"/\\"/g')"
  if [ -d "$res" ] ; then
    cmd="cd"
  elif [ -f "$res" ] ; then
    cmd="select"
  else
    exit 0
  fi
  lf -remote "send $id $cmd \"$res\""
}}

# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
  set -f
  case $f in
    *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
    *.tar.gz|*.tgz) tar xzvf $f;;
    *.tar.xz|*.txz) tar xJvf $f;;
    *.zip) unzip $f;;
    *.rar) unrar x $f;;
    *.7z) 7z x $f;;
  esac
}}

# compress current file or selected files with tar and gunzip
cmd tar ${{
  set -f
  mkdir $1
  cp -r $fx $1
  tar czf $1.tar.gz $1
  rm -rf $1
}}

# compress current file or selected files with zip
cmd zip ${{
  set -f
  mkdir $1
  cp -r $fx $1
  zip -r $1.zip $1
  rm -rf $1
}}

cmd zoxide %{{
  printf "Zoxide ref: "
  read ans
  result="$(zoxide query --exclude "${PWD}" -- "$ans")"
  lf -remote "send ${id} cd '${result}'"
}}

cmd trash %set -f; mv $fx ~/.trash

# unbind
map m

# trash file(s)
map <delete> trash
map D trash
# cut
map x cut
# fzf jump to folder
map <c-f> :fzf_jump
# fzf open file
map f $$EDITOR $(fzf)
# zoxide
map z zoxide
# toggle hidden
map . set hidden!
map R reload
map mf mkfile
map md mkdir
map ; read
map <enter> open

cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$$EDITOR \$fx";;
    *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
  esac
}}

map gD cd ~/Downloads
map gd cd ~/Desktop
map gs cd ~/Sites
map gc cd ~/.config
map g. cd ~/dotfiles
