# Unrar all .rar files in current folder
alias unrarall='find ./ -name "*.rar" -execdir unrar e {} \;'

# Back folders
alias .="cd ../"
alias ..="cd ../../"
alias ...="cd ../../../"
alias ....="cd ../../../../"

# Folders
alias sites="cd ~/Sites"
